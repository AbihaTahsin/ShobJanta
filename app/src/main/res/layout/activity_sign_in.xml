<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/wal2">


    <EditText
        android:id="@+id/signInuserIdText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="50dp"
        android:layout_x="1dp"
        android:layout_y="30dp"
        android:hint="@string/userIdString"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/signInpassText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_x="1dp"
        android:layout_y="74dp"
        android:hint="@string/userPasswordString"
        android:inputType="textPassword"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/signInbutton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_x="-2dp"
        android:layout_y="160dp"
        android:background="@drawable/custom_button"
        android:textColor="#4c4c4c"
        android:text="Sign in"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/signUpregTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="75dp"
        android:layout_y="160dp"
        android:hint="@string/signUp_register"> </TextView>

    <ProgressBar
        android:id="@+id/progressbarid"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

    </ProgressBar>
</LinearLayout>